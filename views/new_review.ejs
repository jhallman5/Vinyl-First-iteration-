<%- include partials/header %>
<%- include partials/nav %>


  <section class="hero is-light is-bold">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          <%= album.attributes.title %>
        </h1>
        <h2 class="subtitle">
          <em>by <%= album.attributes.artist %></em>
        </h2>
      </div>
    </div>
  </section>

  <div class="columns margin-top-5">
    <form class="field column is-4 is-offset-4" method="POST">
      <div class="has-text-centered">
        Make Your Voice Heard!
      </div>
      <div class="control">
        <textarea class="textarea" name="content" placeholder="Share Your Opinion Here!"></textarea>
      </div>

      <div class="field is-grouped">
        <div class="control new-review-form">
          <input class="button " type="submit" value="POST IT!" />
        </div>
      </div>
    </form>
  </div>

<%- include partials/footer %>
